<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieSearchAdapter">

    <ImageView
        android:id="@+id/search_poster"
        android:layout_width="200dp"
        android:layout_height="245dp"
        android:scaleType="center"
        android:contentDescription="Coming Soon Movie Poster"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id ="@+id/movie_title"
        android:layout_width="187dp"
        android:layout_height="78dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_poster"/>

    <ImageButton
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_add_item"
        android:contentDescription="add to watchlist button"
        app:layout_constraintEnd_toEndOf="@id/search_poster"
        app:layout_constraintTop_toTopOf="@id/search_poster" />



</androidx.constraintlayout.widget.ConstraintLayout>